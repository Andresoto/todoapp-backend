    "firebase-admin": "^12.6.0",
    "firebase-functions": "^6.0.1",
    "joi": "^17.13.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "firebase-functions-test": "^3.1.0",
    "jest": "^30.0.5",
    "ts-jest": "^29.4.1",
    "typescript": "^5.7.3"
  },
